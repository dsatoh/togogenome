%html
  %head
    %meta(charset='utf-8')
    %title TogoGenome
    = stylesheet_link_tag    'application', :media => 'all'
    = stylesheet_link_tag    'togo', :media => 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'togogenome'
    = csrf_meta_tags

  %body(data-spy='scroll' data-target='#navbar')
