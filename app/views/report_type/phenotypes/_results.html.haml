= content_for :javascript do
  :javascript
    $(function() {
      var result_table = $("#phenotype_results");
      drawInfo.phenotype = {
        dataTable: result_table.DataTable({
          ajax: {
            url: '/report_type/phenotypes.json'
          },
          columns: [
            {data: "category"},
            {data: "phenotype_link"},
            {data: "inhabitants"}
          ]
        }),
        downloadCSV: '/report_type/phenotypes.csv'
      };

      result_table.parent().find(".result-download-container").append("<a>Download CSV</a>");
    });

%table#phenotype_results.table.table-striped.table-bordered.table-hover.table-condensed
  %thead
    %td Category
    %td Phenotype
    %td Inhabitants
